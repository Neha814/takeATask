<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Neha Bhardwaj"
            android:textColor="@color/yellow"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:ems="10"
                android:enabled="false"
                android:text="Image design for website"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/title"
                android:background="@null"
                android:drawableLeft="@drawable/price_sign"
                android:drawablePadding="4dp"
                android:ems="6"
                android:enabled="false"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:enabled="false"
                android:text="vxdf fgfgf dgfdgf dvcv cvvcv cvcxvcv cvdwew fggv eefcefdf"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/description"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/pole"
                android:drawablePadding="6dp"
                android:text="Address"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:enabled="false"
                android:text="abcd, Street no 10,USA , Miami,Florida - 160019 "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/address"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Task to be completed by"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:drawableLeft="@drawable/expiry"
                android:drawablePadding="4dp"
                android:text="11th august 2015"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:text="vxdf fgfgf dgfdgf dvcv cvvcv cvcxvcv cvdwew fggv eefcefdf"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/task_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                  android:layout_below="@+id/date"
                  android:layout_marginTop="8dp"
               android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>